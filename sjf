// SJF //
#include <stdio.h>
int main()
{
int n,temp;
printf("enter the number of process");
scanf("%d",&n);
int ct[n],bt[n],wt[n],tat[n],i,j,tct=0,twt=0;
printf("enter the burst time");
for(i=0;i<n;i++)
scanf("%d",&bt[i]);
for(i=0;i<n-1;i++){
for(j=0;j<n-i-1;j++){
if(bt[j]>bt[j+1]){
temp = bt[j];
bt[j] = bt[j+1];
bt[j+1] = temp;
}}}
ct[0]=bt[0];
wt[0]=0;
for(i=1;i<n;i++){
ct[i] = ct[i-1]+bt[i];
wt[i] = ct[i-1];
}
printf("completion time\n");
for(i=0;i<n;i++)
{
printf("%d\n",ct[i]);
}
printf("waiting time\n");
for(i=0;i<n;i++)
{
printf("%d\n",wt[i]);
}
for(i=0;i<n;i++)
{
twt+=wt[i];
tct+=ct[i];
}
printf("average completion time is %d\n",(tct/n));
printf("average waiting time is %d\n",(twt/n));
return 0;
}
